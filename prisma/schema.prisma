// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model Item {
  id        String      @id
  handle    String      @unique
  title     String
  Metafield Metafield[]
}

model MetafieldDefinition {
  id                 String      @id
  name      String
  namespace String
  key       String
  Metafield          Metafield[]
}

model Metafield {
  id                    String              @id
  item                  Item                @relation(fields: [item_id], references: [id])
  item_id               String
  metafieldDefinition   MetafieldDefinition @relation(fields: [metafieldDefinitionId], references: [id])
  metafieldDefinitionId String              @map("metafield_definition_id")
  value                 String
  type                  String
  description           String?
  discount              Discount?           @relation(fields: [discount_id], references: [id])
  discount_id           String?
}

model Discount {
  id        String      @id
  title     String
  summary   String
  Metafield Metafield[]
}
