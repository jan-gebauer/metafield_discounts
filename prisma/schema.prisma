// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model Item {
  id        Int         @id
  handle    String      @unique
  title     String
  Metafield Metafield[]
}

model NamespaceKey {
  id        Int         @id
  namespace String      @unique
  key       String      @unique
  Metafield Metafield[]
}

model Metafield {
  id               Int           @id
  item             Item          @relation(fields: [item_id], references: [id])
  item_id          Int
  namespaceKey     NamespaceKey  @relation(fields: [namespace_key_id], references: [id])
  namespace_key_id Int
  value            String
  type             MetafieldType @relation(fields: [type_id], references: [id])
  type_id          Int
  description      String?
}

model MetafieldType {
  id        Int         @id
  type      String      @unique
  Metafield Metafield[]
}
